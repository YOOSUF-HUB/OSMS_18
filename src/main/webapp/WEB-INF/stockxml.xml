<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

	
	<!-- Insert Stock -->
     <servlet>
     	<servlet-name>stockInsertServlet</servlet-name>
     	<servlet-class>onlineStockManagement.stockInsertServlet</servlet-class>
     </servlet>
     
     <servlet-mapping>
     	<servlet-name>stockInsertServlet</servlet-name>
     	<url-pattern>/stockInsertServlet</url-pattern>
     </servlet-mapping>

	<!-- View Stock -->
     <servlet>
     	<servlet-name>GetAllStockServlet</servlet-name>
     	<servlet-class>onlineStockManagement.GetAllStockServlet</servlet-class>
     </servlet>
     
     <servlet-mapping>
     	<servlet-name>GetAllStockServlet</servlet-name>
     	<url-pattern>/GetAllStockServlet</url-pattern>
     </servlet-mapping>
     
     
     <!-- Update Stock -->
      <servlet>
     	<servlet-name>updateStockServlet</servlet-name>
     	<servlet-class>onlineStockManagement.updateStockServlet</servlet-class>
     </servlet>
     
     <servlet-mapping>
     	<servlet-name>updateStockServlet</servlet-name>
     	<url-pattern>/updateStockServlet</url-pattern>
     </servlet-mapping>

</web-app>