<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


  <!-- 	add customer -->     
	<servlet>
     	<servlet-name>AddCustomerServlet</servlet-name>
     	<servlet-class>customerPackage.AddCustomerServlet</servlet-class>
     </servlet>
     <servlet-mapping>
     	<servlet-name>AddCustomerServlet</servlet-name>
     	<url-pattern>/AddCustomerServlet</url-pattern>
     </servlet-mapping>
     
     
          <!-- customer display -->
     <servlet>
     	<servlet-name>GetAllCustomersServlet</servlet-name>
     	<servlet-class>customerPackage.GetAllCustomersServlet</servlet-class>
     </servlet>
     
     <servlet-mapping>
     	<servlet-name>GetAllCustomersServlet</servlet-name>
     	<url-pattern>/GetAllCustomersServlet</url-pattern>
     </servlet-mapping>
     
     
     <!-- add order -->
     <servlet>
     	<servlet-name>AddOrderServlet</servlet-name>
     	<servlet-class>customerPackage.AddOrderServlet</servlet-class>
     </servlet>
     <servlet-mapping>
     	<servlet-name>AddOrderServlet</servlet-name>
     	<url-pattern>/AddOrderServlet</url-pattern>
     </servlet-mapping>
     
          <!-- order display -->
     <servlet>
     	<servlet-name>GetAllOrdersServlet</servlet-name>
     	<servlet-class>customerPackage.GetAllOrdersServlet</servlet-class>
     </servlet>
     
     <servlet-mapping>
     	<servlet-name>GetAllOrdersServlet</servlet-name>
     	<url-pattern>/GetAllOrdersServlet</url-pattern>
     </servlet-mapping>
     
     

</web-app>